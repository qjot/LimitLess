@model IEnumerable<Limitless.Model.Logs>
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table-logs').DataTable();
    });
</script>
<div class="table-responsive">
    <table id="table-logs" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.logId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thread)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Logger)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userName)
            </th>
           
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.logId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Thread)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Logger)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @{
                            if (item.userName.IsEmpty())
                            {
                                @Html.Raw("Anonymous")
                                ;
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.userName)
                            }
                        }
                       
                    </td>

                </tr>
            }
        </tbody>
</table>
</div>